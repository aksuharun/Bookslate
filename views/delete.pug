extends layout

block content 
	h2 Delete #{itemType}

	form(method="delete" id="form")
		label(for="id") #{itemType} ID:
		br
		input(type="text" name="id" id="id" value=id required)
		br
		br
		button(type="submit") Delete #{itemType}
		p(style="color:#a11; font-weight: 600") This action cannot be undone!

	script(src="/script.js")