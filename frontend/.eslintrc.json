{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"indent": ["error", "tab"],
		"semi": ["error", "never"],
		"quotes": ["error", "single"],
		"object-curly-spacing": ["error", "always"],
		"vue/html-indent": ["error", "tab"],
		"vue/script-indent": ["error", "tab"],
		"no-unused-vars": "warn",
		"vue/multi-word-component-names": "off"
	}
} 