{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"semi": ["error", "never"],
		"quotes": ["error", "single"],
		"no-unused-vars": "warn",
		"no-console": "off",
		"object-curly-spacing": ["error", "always"]
	},
	"overrides": [
		{
			"files": ["views/*.js"],
			"env": {
				"browser": true
			},
			"globals": {
				"axios": "readonly"
			}
		}
	]
}